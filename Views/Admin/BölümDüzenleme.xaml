<Window x:Class="OKUL.AdminRiyal.BölümDüzenleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.AdminRiyal"
        mc:Ignorable="d"
        Title="BölümDüzenleme" Height="550" Width="800">
    <Grid>
        <StackPanel Background="#2E2E2E" Grid.Column="0" Grid.Row="0" Margin="0,0,581,0">
            <TextBlock Text="☰ MENÜ"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,15" />

            <Expander Header="Genel İşlemler"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Bölüm İşlermleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>

                </StackPanel>
            </Expander>

            <Expander Header="Duyuru Yayınlama"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Bölüm İçi" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Bölüm Dışı" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Genel Bilgiler" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>
        </StackPanel>
        <Grid HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="495" Margin="266,103,0,0">
            <Label Content="Bölüm Adı:" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="80"/>
            <Label Content="İletişim Numarası:" HorizontalAlignment="Left" Height="28" Margin="0,48,0,0" VerticalAlignment="Top" Width="108"/>
            <Label Content="Bölüm Adresi:" HorizontalAlignment="Left" Height="28" Margin="0,93,0,0" VerticalAlignment="Top" Width="108"/>
            <Label Content="Bölüm Başkanı:" HorizontalAlignment="Left" Height="28" Margin="246,0,0,0" VerticalAlignment="Top" Width="96"/>
            <Label Content="Bölüm Başkan Yardımcısı:" HorizontalAlignment="Left" Height="28" Margin="246,48,0,0" VerticalAlignment="Top" Width="147"/>
            <Label Content="Fakülte:" HorizontalAlignment="Left" Height="28" Margin="246,93,0,0" VerticalAlignment="Top" Width="96"/>
            <TextBox HorizontalAlignment="Left" Height="28" Margin="119,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="102"/>
            <TextBox HorizontalAlignment="Left" Height="28" Margin="119,48,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="102"/>
            <TextBox HorizontalAlignment="Left" Height="28" Margin="119,93,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="102"/>
            <TextBox HorizontalAlignment="Left" Height="28" Margin="390,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="102"/>
            <TextBox HorizontalAlignment="Left" Height="28" Margin="393,48,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="102"/>
            <ComboBox HorizontalAlignment="Left" Height="28" Margin="342,93,0,0" VerticalAlignment="Top" Width="150"/>
            <Button Content="Bölüm Güncelle" HorizontalAlignment="Left" Height="51" Margin="141,149,0,0" VerticalAlignment="Top" Width="187" Background="Green"/>
        </Grid>
    </Grid>
</Window>
