<Window x:Class="OKUL.Admin.AdminAnaSayfa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
       
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Admin"
        mc:Ignorable="d"
        Title="AdminAnaSayfa" Height="749" Width="1200">
    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF2196F3" Offset="0"/>
                <GradientStop Color="#882196F3" Offset="0.4"/>
                <GradientStop Color="#44000000" Offset="0.8"/>
                <GradientStop Color="#00000000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Define Rows and Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <!-- Sidebar -->
            <ColumnDefinition Width="*" />
            <!-- Main Content -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <!-- Header -->
            <RowDefinition Height="*" />
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header Text -->
        <TextBlock Text="Hoşgeldin Admin"
                   FontSize="28"
                   FontFamily="Segoe UI Light"
                   Foreground="White"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Column="1"
                   Grid.Row="0" />

        <!-- Sidebar Menü -->
        <StackPanel Background="#2E2E2E" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="0" >
            <Button Content="☰ Ana Menü"
                    Height="40"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,15,0,15" />

            <Expander Header="Genel İşlemler"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Bölüm İşlermleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>

                </StackPanel>
            </Expander>

            <Expander Header="Duyuru İşlemleri"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Duyuru Ekleme" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Duyuru Görüntüleme" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Genel Bilgiler" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>
        </StackPanel>

        <!-- Main Content Grid -->
        <Grid Grid.Column="1" Grid.Row="1" Margin="20" >
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Akademisyen Sayısı -->
            <Grid Grid.Row="0" Grid.Column="0" Margin="10" Background="DodgerBlue"  >
                <Grid.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" />
                </Grid.Effect>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                    <TextBlock Text="Akademisyen Sayısı"
                               Foreground="Black"
                               FontSize="26"
                               FontWeight="Bold"
                               FontFamily="Segoe UI Semibold"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="90"
                               FontSize="42"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Fakülte Sayısı -->
            <Grid Grid.Row="0" Grid.Column="1" Margin="10" Background="PaleGoldenrod" >
                <Grid.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="6" Opacity="0.6" />
                </Grid.Effect>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Fakülte Sayısı"
                               Foreground="Black"
                               FontSize="26"
                               FontWeight="Black"
                               FontFamily="Segoe UI Semibold"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="20"
                               FontSize="42"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Bölüm Sayısı -->
            <Grid Grid.Row="1" Grid.Column="0" Margin="10" Background="BlueViolet" >
                <Grid.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="6" Opacity="0.6" />
                </Grid.Effect>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Bölüm Sayısı"
                               Foreground="Black"
                               FontSize="26"
                               FontWeight="Black"
                               FontFamily="Segoe UI Semibold"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="127"
                               FontSize="42"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Öğrenci Sayısı -->
            <Grid Grid.Row="1" Grid.Column="1" Margin="10" Background="Lavender" >
                <Grid.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="6" Opacity="0.6" />
                </Grid.Effect>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Öğrenci Sayısı"
                               Foreground="Black"
                               FontSize="26"
                               FontWeight="Black"
                               FontFamily="Segoe UI Semibold"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="70.189"
                               FontSize="42"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</Window>
