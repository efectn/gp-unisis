<UserControl x:Class="gp_unisis.Views.Admin.AkademisyenDuzenleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gp_unisis.Views.Admin"
        mc:Ignorable="d"

        Height="750"
        Width="1500"
       >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü Paneli -->
        <StackPanel Background="#2E2E2E" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
            <Button Content="☰ Ana Menü"
                    Height="40"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="Bold"
                    Command="{Binding AdminAnaSayfaCommand}"
                    Margin="0,15,0,15" />

            <Expander Header="Genel İşlemler"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding FakülteListelemeCommand}"/>
                    <Button Content="Bölüm İşlermleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding BölümListelemeCommand}"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding DönemListelemeCommand}"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding AkademisyenListeleCommand}"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding DersGrubuListelemeCommand}"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding ÖğrenciİşleriListelemeCommand}"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Admin Listele" Margin="5" Background="White" Foreground="#3A3A3A" Command="{Binding AdminListelemeCommand}"/>
                </StackPanel>
            </Expander>
            <Button  Content="Çıkış Yap"
                     Height="45"
                     FontSize="28"
                     FontFamily="Segoe UI Light"
                     Foreground="White"
                     Background="Red"
                     HorizontalAlignment="Center"
                     Command="{Binding LogOutCommand}"
                     Grid.Column="1"
                     Grid.Row="0" Width="210"/>
        </StackPanel>

        <!-- Sağ İçerik Paneli -->
        <Grid Grid.Column="1" Margin="20,20,239,286">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ad Soyad -->
            <Label Content="Akademisyen Adı Soyadı:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Text="{Binding Lecturer.FullName}" 
                     Grid.Row="0" Grid.Column="1"
                     FontWeight="Bold"
                     Height="30" Margin="0,10"/>

            <!-- Email -->
            <Label Content="Email:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Text="{Binding Lecturer.Email}" 
                     Grid.Row="1" Grid.Column="1"
                     FontWeight="Bold"
                     Height="30" Margin="0,10"/>

            <!-- Şifre -->
            <Label Content="Şifre:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Text="{Binding NewPassword}" 
                     Grid.Row="2" Grid.Column="1"
                     FontWeight="Bold"
                     Height="30" Margin="0,10"/>

            <!-- Güncelle Butonu -->
            <Button Content="Akademisyen Güncelle"
                    Grid.Row="3"
                    Width="200" Height="40"
                    Background="Green"
                    HorizontalAlignment="Left"
                    Margin="51,10,0,10"
                    Grid.ColumnSpan="2"
                    Command="{Binding AkademisyenGuncelleCommand}"

                    />
        </Grid>
    </Grid>
</UserControl>
