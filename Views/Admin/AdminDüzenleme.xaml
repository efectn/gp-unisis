<UserControl x:Class="gp_unisis.Views.Admin.AdminDüzenleme"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:gp_unisis.Views.Admin"
             mc:Ignorable="d"
             >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sol Menü Paneli -->
        <StackPanel Background="#2E2E2E" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="0">
            <Button Content="☰ Ana Menü"
                    Height="40"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0,15,0,15"
                    Command="{Binding AdminAnaSayfaCommand}"
                    Padding="10" />

            <Expander Header="Genel İşlemler"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210"
                      Padding="10">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding FakülteListelemeCommand}" Padding="10"/>
                    <Button Content="Bölüm İşlermleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding BölümListelemeCommand}" Padding="10"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding DönemListelemeCommand}" Padding="10"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding AkademisyenListeleCommand}" Padding="10"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding DersGrubuListelemeCommand}" Padding="10"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding ÖğrenciİşleriListelemeCommand}" Padding="10"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210"
                      Padding="10">
                <StackPanel>
                    <Button Content="Admin Listele" Margin="5" Background="White" Foreground="#3A3A3A" Command="{Binding AdminListelemeCommand}"/>
                </StackPanel>
            </Expander>

            <Button  Content="Çıkış Yap"
                     Height="45"
                     FontSize="28"
                     FontFamily="Segoe UI Light"
                     Foreground="White"
                     Background="Red"
                     HorizontalAlignment="Center"
                     Command="{Binding LogOutCommand}"
                     Grid.Column="1"
                     Grid.Row="0" Width="210"/>
        </StackPanel>

        <!-- Sağ içerik paneli -->
        <Grid Grid.Column="1" Margin="161,81,249,238">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ad Soyad -->
            <Label Content="Ad Soyad:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,10" Padding="10"/>
            <TextBox FontWeight="Bold" Text="{Binding Admin.Name}" Grid.Row="0" Grid.Column="1" Margin="0,10" Padding="10"/>

            <!-- Şifre -->
            <Label Content="Password:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10" Padding="10"/>
            <TextBox FontWeight="Bold" Text="{Binding NewPassword}" Grid.Row="1" Grid.Column="1" Margin="0,10" Padding="10"/>

            <!-- Email -->
            <Label Content="Email:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,10" Padding="10"/>
            <TextBox FontWeight="Bold" Text="{Binding Admin.Email}" Grid.Row="2" Grid.Column="1" Margin="0,10" Padding="10"/>

            <!-- Buton -->
            <Button Content="Admin Güncelle"
                    Grid.Row="3" Grid.Column="1"
                    Width="200" Height="40"
                    Background="Green"
                    HorizontalAlignment="Left"
                    Margin="0,20,0,0"
                    Command="{Binding AdminGuncelleCommand}"
                    Padding="10" />
        </Grid>
    </Grid>
</UserControl>
