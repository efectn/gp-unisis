<Window x:Class="OKUL.AdminRiyal.AdminDüzenleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.AdminRiyal"
        mc:Ignorable="d"
        Title="AdminDüzenleme" Height="550" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <!-- Menü -->
            <ColumnDefinition Width="*"/>
            <!-- İçerik -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sol Menü Paneli -->
        <StackPanel Background="#2E2E2E" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="0" >
            <Button Content="☰ Ana Menü"
            Height="40"
               Foreground="White"
               FontSize="18"
               FontWeight="Bold"
               Margin="0,15,0,15" />

            <Expander Header="Genel İşlemler"
              Margin="0,0,0,10"
              Foreground="White"
              Background="#3A3A3A"
              FontSize="15"
              ExpandDirection="Down"
              Width="210">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Bölüm İşlermleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>

                </StackPanel>
            </Expander>

            <Expander Header="Duyuru İşlemleri"
              Margin="0,0,0,10"
              Foreground="White"
              Background="#3A3A3A"
              FontSize="15"
              ExpandDirection="Down"
              Width="210">
                <StackPanel>
                    <Button Content="Duyuru Ekleme" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Duyuru Görüntüleme" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin"
              Margin="0,0,0,10"
              Foreground="White"
              Background="#3A3A3A"
              FontSize="15"
              ExpandDirection="Down"
              Width="210">
                <StackPanel>
                    <Button Content="Genel Bilgiler" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>
        </StackPanel>

        <!-- Sağ içerik paneli -->
        <Grid Grid.Column="1" Margin="161,81,249,238">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ad Soyad -->
            <Label Content="Ad Soyad:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox FontWeight="Bold" Text="Huşçakal" Grid.Row="0" Grid.Column="1" Margin="0,10"/>

            <!-- Şifre -->
            <Label Content="Password:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox FontWeight="Bold" Text="Selam" Grid.Row="1" Grid.Column="1" Margin="0,10"/>

            <!-- Email -->
            <Label Content="Email:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox FontWeight="Bold" Text="Meraba" Grid.Row="2" Grid.Column="1" Margin="0,10"/>

            <!-- Buton -->
            <Button Content="Admin Güncelle"
                    Grid.Row="3" Grid.Column="1"
                    Width="200" Height="40"
                    Background="Green"
                    HorizontalAlignment="Left"
                    Margin="0,20,0,0"
                    Command="{Binding AdminEkleCommand}" />
        </Grid>
    </Grid> 
</Window>
