<UserControl x:Class="gp_unisis.Views.Admin.ÖğrenciİşleriDüzenleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gp_unisis.Views.Admin"
        mc:Ignorable="d"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- SOL MENÜ -->
        <StackPanel Background="#2E2E2E" Grid.Column="0">
            <Button Content="☰ Ana Menü"
                    Command="{Binding AdminAnaSayfaCommand}"
                    Height="40"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0,15,0,15" />

            <Expander Header="Genel İşlemler"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding FakülteListelemeCommand}"/>
                    <Button Content="Bölüm İşlermleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding BölümListelemeCommand}"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding DönemListelemeCommand}"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding AkademisyenListeleCommand}"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding DersGrubuListelemeCommand}"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White" Command="{Binding ÖğrenciİşleriListelemeCommand}"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Admin Listele" Margin="5" Background="White" Foreground="#3A3A3A" Command="{Binding AdminListelemeCommand}"/>
                </StackPanel>
            </Expander>
            <Button  Content="Çıkış Yap"
                     Height="45"
                     FontSize="28"
                     FontFamily="Segoe UI Light"
                     Foreground="White"
                     Background="Red"
                     HorizontalAlignment="Center"
                     Command="{Binding LogOutCommand}"
                     Grid.Column="1"
                     Grid.Row="0" Width="210"/>
        </StackPanel>

        <!-- İÇERİK PANELİ -->
        <Grid Grid.Column="1" Margin="40,40,40,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Ad Soyad:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding StudentPersonal.Name}" FontWeight="Normal" Height="28" Margin="0,5"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Email:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding StudentPersonal.Email}" FontWeight="Normal" Height="28" Margin="0,5"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Şifre:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewPassword}" FontWeight="Normal" Height="28" Margin="0,5"/>

            <Button Grid.Row="3" Grid.Column="1" Content="Öğrenci Personeli Düzenle"
                    Width="200" Height="40" Margin="0,20,0,0"
                    Background="Green" Foreground="White"
                    HorizontalAlignment="Left" Command="{Binding StudentPersonalGuncelleCommand}"/>
        </Grid>
    </Grid>
</UserControl>
