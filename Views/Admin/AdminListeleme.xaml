<UserControl x:Class="gp_unisis.Views.Admin.AdminListeleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gp_unisis.Views.Admin"
        Height="750"
        Width="1500"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü Paneli -->
        <StackPanel Background="#2E2E2E" Grid.Column="0" Margin="0">
            <Button Content="☰ Ana Menü"
                    Height="40"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0,15,0,15"
                    Padding="10"
                    Command="{Binding AdminAnaSayfaCommand}"

                    HorizontalAlignment="Stretch"/>

            <Expander Header="Genel İşlemler"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210"
                      Padding="10">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Padding="10" Foreground="#3A3A3A" Background="White" Command="{Binding FakülteListelemeCommand}" HorizontalAlignment="Stretch"/>
                    <Button Content="Bölüm İşlermleri" Margin="5" Padding="10" Foreground="#3A3A3A" Background="White" Command="{Binding BölümListelemeCommand}" HorizontalAlignment="Stretch"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Padding="10" Foreground="#3A3A3A" Background="White" Command="{Binding DönemListelemeCommand}" HorizontalAlignment="Stretch"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Padding="10" Foreground="#3A3A3A" Background="White" Command="{Binding AkademisyenListeleCommand}" HorizontalAlignment="Stretch"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Padding="10" Foreground="#3A3A3A" Background="White" Command="{Binding DersGrubuListelemeCommand}" HorizontalAlignment="Stretch"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Padding="10" Foreground="#3A3A3A" Background="White" Command="{Binding ÖğrenciİşleriListelemeCommand}" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210"
                      Padding="10">
                <StackPanel>
                    <Button Content="Admin Listele" Margin="5" Background="White" Foreground="#3A3A3A" Command="{Binding AdminListelemeCommand}" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Expander>
            <Button  Content="Çıkış Yap"
                     Height="45"
                     FontSize="28"
                     FontFamily="Segoe UI Light"
                     Foreground="White"
                     Background="Red"
                     HorizontalAlignment="Center"
                     Command="{Binding LogOutCommand}"
                     Grid.Column="1"
                     Grid.Row="0" Width="210"/>
        </StackPanel>

        <!-- İçerik Paneli -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!-- ListView -->
            <ListView Margin="0,5" AlternationCount="2"
                      ItemsSource="{Binding Admins}"
                      Grid.Row="0"
                      HorizontalContentAlignment="Stretch">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="Background" Value="#E6F0FF"/>
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#BBCCFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Ad Soyad" Width="150" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Email" Width="150" DisplayMemberBinding="{Binding Email}"/>
                        <GridViewColumn Header="Düzenle" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Düzenle" Background="Blue" Foreground="White" Padding="10"
                                Command="{Binding DataContext.AdminDuzenleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Sil" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Sil" Background="Red" Foreground="White" Padding="10"
                                Command="{Binding DataContext.AdminSilCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Form Alanı -->
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0" HorizontalAlignment="Left" MaxWidth="400">
                <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Stretch">
                    <Label Content="Ad Soyad:" Width="100" FontWeight="Bold" Padding="10"/>
                    <TextBox FontWeight="Bold" Text="{Binding YeniAdminAdSoyad}" Padding="10" HorizontalAlignment="Stretch" MinWidth="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Stretch">
                    <Label Content="Email:" Width="100" FontWeight="Bold" Padding="10"/>
                    <TextBox FontWeight="Bold" Text="{Binding YeniAdminEmail}" Padding="10" HorizontalAlignment="Stretch" MinWidth="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Stretch">
                    <Label Content="Password" Width="100" FontWeight="Bold" Padding="10"/>
                    <TextBox FontWeight="Bold" Text="{Binding YeniAdminPassword}" Padding="10" HorizontalAlignment="Stretch" MinWidth="200"/>
                </StackPanel>

                <Button Content="Admin Ekle"
                        Width="200" Height="32" Background="Green"
                        HorizontalAlignment="Left" Margin="0,10,0,0"
                        Command="{Binding AdminEkleCommand}"
                        Padding="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>