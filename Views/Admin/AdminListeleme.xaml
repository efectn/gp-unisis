<Window x:Class="OKUL.AdminRiyal.AdminListeleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.AdminRiyal"
        mc:Ignorable="d"
        Title="AdminListeleme" Height="450" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü Paneli -->
        <StackPanel Background="#2E2E2E" Grid.Column="0">
            <TextBlock Text="☰ MENÜ" Foreground="White" FontSize="18" FontWeight="Bold" Margin="10,10,0,15" />

            <Expander Header="Genel İşlemler" Margin="10,0,10,10" Foreground="White" Background="#3A3A3A" FontSize="15">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Bölüm İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Admin İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander Header="Duyuru Yayınlama" Margin="10,0,10,10" Foreground="White" Background="#3A3A3A" FontSize="15">
                <StackPanel>
                    <Button Content="Bölüm İçi" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Bölüm Dışı" Margin="5" Foreground="#3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin" Margin="10,0,10,10" Foreground="White" Background="#3A3A3A" FontSize="15">
                <StackPanel>
                    <Button Content="Genel Bilgiler" Margin="5" Foreground="#3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>
        </StackPanel>

        <!-- İçerik Paneli -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!-- ListView -->
            <ListView Margin="0,5" AlternationCount="2"
                      ItemsSource="{Binding SinavProgramiListesi}"
                      Grid.Row="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="Background" Value="#E6F0FF"/>
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#BBCCFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="100"/>
                        <GridViewColumn Header="Ad Soyad" Width="150"/>
                        <GridViewColumn Header="Email" Width="150"/>
                        <GridViewColumn Header="Düzenle" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Düzenle" Background="Blue" Foreground="White"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Sil" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Sil" Background="Red" Foreground="White"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Form Alanı -->
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Ad Soyad:" Width="100" FontWeight="Bold"/>
                    <TextBox Width="200" FontWeight="Bold" Text="{Binding YeniAdmin.AdSoyad}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Email:" Width="100" FontWeight="Bold"/>
                    <TextBox Width="200" FontWeight="Bold" Text="{Binding YeniAdmin.Email}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Password"  Width="100" FontWeight="Bold"/>
                    <TextBox Width="200" FontWeight="Bold" Text="{Binding YeniAdmin.Password}"/>
                </StackPanel>

                <Button Content="Admin Ekle"
                        Width="200" Height="32" Background="Green"
                        HorizontalAlignment="Left" Margin="0,10,0,0"
                        Command="{Binding AdminEkleCommand}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
