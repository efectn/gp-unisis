<Window x:Class="OKUL.AdminRiyal.DönemDüzenleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.AdminRiyal"
        mc:Ignorable="d"
        Title="DönemDüzenleme" Height="550" Width="800">
    <Grid>
        <StackPanel Background="#2E2E2E" Grid.Column="0" Grid.Row="0" Margin="0,0,581,0">
            <TextBlock Text="☰ MENÜ"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,15" />

            <Expander Header="Genel İşlemler"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Bölüm İşlermleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>

                </StackPanel>
            </Expander>

            <Expander Header="Duyuru Yayınlama"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Bölüm İçi" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Bölüm Dışı" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Genel Bilgiler" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>
        </StackPanel>
        <Grid HorizontalAlignment="Left" Height="479" Margin="271,31,0,0" VerticalAlignment="Top" Width="486">
            <Label Content="Dönem Adı:" HorizontalAlignment="Left" Height="34" Margin="21,10,0,0" VerticalAlignment="Top" Width="87"/>
            <TextBox HorizontalAlignment="Left" Height="34" Margin="132,10,0,0" TextWrapping="Wrap" Text="Gir" VerticalAlignment="Top" Width="98"/>
            <Label Content="Dönem Başlangıç Tarihi:" HorizontalAlignment="Left" Height="23" Margin="165,73,0,0" VerticalAlignment="Top" Width="130"/>
            <Label Content="Dönem Bitiş Tarihi:" HorizontalAlignment="Left" Height="23" Margin="21,73,0,0" VerticalAlignment="Top" Width="129"/>
            <Label Content="Final Sınav Tarihi:" HorizontalAlignment="Left" Height="23" Margin="357,73,0,0" VerticalAlignment="Top" Width="129" RenderTransformOrigin="0.588,0.386"/>
            <DatePicker HorizontalAlignment="Left" Height="89" Margin="166,162,0,0" VerticalAlignment="Top" Width="129"/>
            <DatePicker HorizontalAlignment="Left" Height="89" Margin="341,162,0,0" VerticalAlignment="Top" Width="129"/>
            <DatePicker HorizontalAlignment="Left" Height="89" Margin="0,162,0,0" VerticalAlignment="Top" Width="129"/>
            <Label Content="Ders Seçim Başlangıç Tarihi:" HorizontalAlignment="Left" Height="23" Margin="39,262,0,0" VerticalAlignment="Top" Width="148"/>
            <Label Content="Ders Seçim Bitiş Tarihi:" HorizontalAlignment="Left" Height="23" Margin="267,268,0,0" VerticalAlignment="Top" Width="148"/>
            <DatePicker HorizontalAlignment="Left" Height="89" Margin="49,299,0,0" VerticalAlignment="Top" Width="128"/>
            <DatePicker HorizontalAlignment="Left" Height="89" Margin="267,299,0,0" VerticalAlignment="Top" Width="128"/>
            <Button Content="Dönem Güncelle" HorizontalAlignment="Left" Height="37" Margin="151,442,0,0" VerticalAlignment="Top" Width="144" Background="Green"/>
        </Grid>
    </Grid>
</Window>
