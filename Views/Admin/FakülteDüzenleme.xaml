        <StackPanel Background="#2E2E2E" Grid.Column="0" Grid.Row="0" Margin="0,0,581,0">
            <TextBlock Text="☰ MENÜ"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,15" />

            <Expander Header="Genel İşlemler"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Bölüm İşlermleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>

                </StackPanel>
            </Expander>

            <Expander Header="Duyuru Yayınlama"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Bölüm İçi" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Bölüm Dışı" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Genel Bilgiler" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>
        </StackPanel>
        <Grid Height="297" Margin="300,41,168,0" VerticalAlignment="Top">
            <Label Content="Adı:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="0,0,202,0"/>
            <Label Content="İletişim Numarası:" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Top" Margin="0,36,202,0"/>
            <TextBox Text="Gir" Grid.Row="0" Height="28" Margin="162,5,0,264"/>
            <Label Content="Fakülte Başkanı:" FontWeight="Bold" Grid.Row="0" VerticalAlignment="Top" Height="28" Margin="0,149,177,0"/>
            <Label Content="Fakülte Başkan Yardımcısı:" FontWeight="Bold" VerticalAlignment="Top" Margin="0,186,177,0"/>
            <TextBox Text="Gir" Height="28" Margin="162,147,0,122"/>
            <Label Content="Adres:" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Top" Margin="0,75,202,0"/>
            <TextBox Text="Gir" TextWrapping="Wrap" Margin="162,67,0,171"/>
            <TextBox Text="Gir" Grid.Row="0" Height="28" Margin="162,186,0,83"/>
            <TextBox Text="Gir" Height="28" Margin="162,39,0,230"/>
            <Button Height="50" Width="166" Content="Fakülte Güncelle"
                Background="Green" Foreground="White" HorizontalAlignment="Left" Margin="115,247,0,0"/>
        </Grid>
    </Grid>
</Window>
