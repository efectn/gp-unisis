<Window x:Class="OKUL.AdminRiyal.FakülteDüzenleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.AdminRiyal"
        mc:Ignorable="d"
        Title="FakülteDüzenleme" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <!-- Sol Menü -->
            <ColumnDefinition Width="*"/>
            <!-- İçerik -->
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <StackPanel Background="#2E2E2E" Grid.Column="0" Margin="0">
            <Button Content="☰ Ana Menü"
                    Height="40"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0,15,0,15" />

            <Expander Header="Genel İşlemler" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down" Width="210">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Bölüm İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground="#3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander Header="Duyuru İşlemleri" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down" Width="210">
                <StackPanel>
                    <Button Content="Duyuru Ekleme" Margin="5" Foreground="#3A3A3A" Background="White"/>
                    <Button Content="Duyuru Görüntüleme" Margin="5" Foreground="#3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down" Width="210">
                <StackPanel>
                    <Button Content="Genel Bilgiler" Margin="5" Foreground="#3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>
        </StackPanel>

        <!-- Sağ İçerik -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Başlık -->
            <TextBlock Text="Fakülte Bilgilerini Düzenle" FontSize="20" FontWeight="Bold" Margin="134,10,0,20"/>

            <!-- Form Alanı -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Adı:" Grid.Row="0" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Grid.Row="0" Grid.Column="1" Height="28" Margin="5"/>

                <Label Content="İletişim Numarası:" Grid.Row="1" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Grid.Row="1" Grid.Column="1" Height="28" Margin="5"/>

                <Label Content="Adres:" Grid.Row="2" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Top" />
                <TextBox Grid.Row="2" Grid.Column="1" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="5"/>

                <Label Content="Fakülte Başkanı:" Grid.Row="3" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Grid.Row="3" Grid.Column="1" Height="28" Margin="5"/>

                <Label Content="Fakülte Başkan Yardımcısı:" Grid.Row="4" Grid.Column="0" FontWeight="Bold" VerticalAlignment="Center" />
                <TextBox Grid.Row="4" Grid.Column="1" Height="28" Margin="5"/>
            </Grid>

            <!-- Güncelle Butonu -->
            <Button Grid.Row="2"
                    Content="Fakülte Güncelle"
                    Background="Green"
                    Foreground="White"
                    Height="45"
                    Width="180"
                    HorizontalAlignment="Left"
                    Margin="0,10,0,0"/>
        </Grid>
    </Grid>
</Window>
