<Window x:Class="OKUL.AdminRiyal.DersGrubuListeleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.AdminRiyal"
        mc:Ignorable="d"
        Title="DersGrubuListeleme" Height="550" Width="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <!-- Menü -->
            <ColumnDefinition Width="*"/>
            <!-- İçerik -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sol Menü Paneli -->
        <StackPanel Background="#2E2E2E" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="0" >
            <Button Content="☰ Ana Menü"
                    Height="40"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0,15,0,15" />

            <Expander Header="Genel İşlemler"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Bölüm İşlermleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>

                </StackPanel>
            </Expander>

            <Expander Header="Duyuru İşlemleri"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Duyuru Ekleme" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Duyuru Görüntüleme" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Genel Bilgiler" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>
        </StackPanel>

        <!-- Sağ İçerik Paneli -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="140*"/>
                <RowDefinition Height="117*"/>
            </Grid.RowDefinitions>

            <!-- ListView -->
            <ListView AlternationCount="2"
                  ItemsSource="{Binding SinavProgramiListesi}"
                  Grid.Row="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="Background" Value="#E6F0FF"/>
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#BBCCFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="100"/>
                        <GridViewColumn Header="Adı" Width="100"/>
                        <GridViewColumn Header="Bölüm" Width="110"/>
                        <GridViewColumn Header="İstenen Kredi" Width="150"/>
                        <GridViewColumn Header="İstenen Ders Sayısı" Width="180"/>
                        <GridViewColumn Header="Düzenle" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Düzenle" Background="Blue" Foreground="White"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Sil" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Sil" Background="Red" Foreground="White"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Grid HorizontalAlignment="Left" Height="174" Grid.Row="1" VerticalAlignment="Center" Width="502" Margin="154,0,0,0">
                <Label Content="Ders Grubu Adı:" HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="113"/>
                <Label Content="Bölüm:" HorizontalAlignment="Left" Height="34" Margin="0,46,0,0" VerticalAlignment="Top" Width="113"/>
                <Label Content="İstenen Kredi:" HorizontalAlignment="Left" Height="34" Margin="0,101,0,0" VerticalAlignment="Top" Width="113"/>
                <Label Content="İstenen Ders Sayısı:" HorizontalAlignment="Left" Height="34" Margin="0,140,0,0" VerticalAlignment="Top" Width="113"/>
                <TextBox HorizontalAlignment="Left" Height="34" Margin="154,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="108"/>
                <TextBox HorizontalAlignment="Left" Height="34" Margin="154,101,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="108"/>
                <TextBox HorizontalAlignment="Left" Height="34" Margin="154,135,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="108"/>
                <Button Content="Ders Grubu Ekle" HorizontalAlignment="Left" Height="65" Margin="311,40,0,0" VerticalAlignment="Top" Width="191" Background="Green"/>
                <ComboBox

            Width="108" VerticalAlignment="Top" Margin="154,47,0,0" Height="33" HorizontalAlignment="Left"/>

            </Grid>
            <ComboBox HorizontalAlignment="Left" Height="33" Margin="196,84,0,0" Grid.Row="1" VerticalAlignment="Top" Width="108"/>

            <!-- Form Alanı -->
        </Grid>
    </Grid>
</Window>
