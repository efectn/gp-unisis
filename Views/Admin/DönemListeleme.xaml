<Window x:Class="OKUL.AdminRiyal.DönemListeleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.AdminRiyal"
        mc:Ignorable="d"
        Title="DönemListeleme" Height="600" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <!-- Menü -->
            <ColumnDefinition Width="*"/>
            <!-- İçerik -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sol Menü Paneli -->
        <StackPanel Background="#2E2E2E" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="0" >
            <Button Content="☰ Ana Menü"
                    Height="40"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0,15,0,15" />

            <Expander Header="Genel İşlemler"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Fakülte İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Bölüm İşlermleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Dönem İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Akademisyen İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Ders Grubu İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Öğrenci İşleri İşlemleri" Margin="5" Foreground=" #3A3A3A" Background="White"/>

                </StackPanel>
            </Expander>

            <Expander Header="Duyuru İşlemleri"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Duyuru Ekleme" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                    <Button Content="Duyuru Görüntüleme" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>

            <Expander Header="Admin"
                      Margin="0,0,0,10"
                      Foreground="White"
                      Background="#3A3A3A"
                      FontSize="15"
                      ExpandDirection="Down"
                      Width="210">
                <StackPanel>
                    <Button Content="Genel Bilgiler" Margin="5" Foreground=" #3A3A3A" Background="White"/>
                </StackPanel>
            </Expander>
        </StackPanel>

        <!-- Sağ İçerik Paneli -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="10,10,10,247">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <!-- ListView -->
            <ListView Margin="-27,5,-28,0" AlternationCount="2"
                  ItemsSource="{Binding SinavProgramiListesi}"
                  Grid.Row="0">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="Background" Value="#E6F0FF"/>
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#BBCCFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="100"/>
                        <GridViewColumn Header="Adı" Width="100"/>
                        <GridViewColumn Header="Dönem Başlangıç" Width="165"/>
                        <GridViewColumn Header="Dönem Bitiş" Width="150"/>
                        <GridViewColumn Header="Kayıt Başlangıç" Width="155"/>
                        <GridViewColumn Header="Kayıt Bitiş" Width="125"/>
                        <GridViewColumn Header="Düzenle" Width="110">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Düzenle" Background="Blue" Foreground="White" Width="150"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Sil" Width="130">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Sil" Background="Red" Foreground="White"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Form Alanı -->
        </Grid>
        <Label Grid.Column="1" Content="Adı:" HorizontalAlignment="Left" Height="27" Margin="7,346,0,0" VerticalAlignment="Top" Width="63"/>
        <Label Grid.Column="1" Content="Dönem Başlangıç Tarihi:" HorizontalAlignment="Left" Height="23" Margin="7,399,0,0" VerticalAlignment="Top" Width="129"/>
        <Label Grid.Column="1" Content="Dönem Bitiş Tarihi:" HorizontalAlignment="Left" Height="23" Margin="161,399,0,0" VerticalAlignment="Top" Width="129"/>
        <Label Grid.Column="1" Content="Ders Seçimi Başlangıç Tarihi:" HorizontalAlignment="Left" Height="23" Margin="458,399,0,0" VerticalAlignment="Top" Width="150"/>
        <Label Grid.Column="1" Content="Ders Seçimi Bitiş Tarihi:" HorizontalAlignment="Left" Height="23" Margin="643,399,0,0" VerticalAlignment="Top" Width="150"/>
        <Label Grid.Column="1" Content="Final :Sınav Tarihi:" HorizontalAlignment="Left" Height="23" Margin="313,399,0,0" VerticalAlignment="Top" Width="129"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="27" Margin="92,346,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="91"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="89" Margin="7,442,0,0" VerticalAlignment="Top" Width="129"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="89" Margin="161,442,0,0" VerticalAlignment="Top" Width="129"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="89" Margin="313,442,0,0" VerticalAlignment="Top" Width="129"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="89" Margin="479,442,0,0" VerticalAlignment="Top" Width="129"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="89" Margin="643,442,0,0" VerticalAlignment="Top" Width="128"/>
        <Button Grid.Column="1" Content="Dönem Ekle" HorizontalAlignment="Left" Height="64" Margin="789,510,0,0" VerticalAlignment="Top" Width="181" Background="Green"/>
    </Grid>
</Window>
