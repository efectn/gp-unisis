<Window x:Class="OKUL.Views.Akademisyen.AkademistenAnaSayfa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.Akademisyen"
        mc:Ignorable="d"
        Title="AkademistenAnaSayfa" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="#2E2E2E"
                BorderBrush="#444"
                BorderThickness="1"
                Padding="9,13,10,10">
            <StackPanel>
                <TextBlock Text="☰ MENÜ"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,15" />

                <Expander Header="Ders Bilgileri" 
                          Margin="0,0,0,10"
                          Foreground="White" 
                          Background="#3A3A3A" 
                          FontSize="15"
                          ExpandDirection="Down"
                          Width="204">
                    <StackPanel>
                        <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click"/>
                        <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click_1"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Sınav İşlemleri" 
                          Margin="0,0,0,10"
                          Foreground="White" 
                          Background="#3A3A3A" 
                          FontSize="15"
                          ExpandDirection="Down"
                          Width="204">
                    <StackPanel>
                        <Button Content="Not Girişi" Margin="5" Background="White" Foreground="#3A3A3A" Click="Button_Click_4"/>
                        <Button Content="Harf Notu Hesaplama" Margin="5" Background="White" Foreground="#3A3A3A" Click="Button_Click_5"/>
                        <Button Content="Dönem Seçimi" Margin="5" Background="White" Foreground="#3A3A3A"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Ders Ekleme" 
                          Margin="0,0,0,10"
                          Foreground="White" 
                          Background="#3A3A3A" 
                          FontSize="15"
                          ExpandDirection="Down"
                          Width="204">
                    <StackPanel>
                        <Button Content="Programa Ders Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click_2"/>
                        <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click_3"/>
                    </StackPanel>
                </Expander>

                <!-- Expander: Ders Bilgileri (Yinelenmiş) -->
                <Expander Header="Ders Bilgileri" 
                          Margin="0,0,0,10"
                          Foreground="White" 
                          Background="#3A3A3A"
                          FontSize="15"
                          ExpandDirection="Down"
                          Width="204">
                    <StackPanel>
                        <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Akademisyen" 
                          Margin="0,0,0,10"
                          Foreground="White" 
                          Background="#3A3A3A"
                          FontSize="15"
                          ExpandDirection="Down"
                          Width="204">
                    <StackPanel>
                        <Button Content="Duyuru" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Akademisyen Giriş Ekranı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Background="White">

        </Grid>
    </Grid>
</Window>
