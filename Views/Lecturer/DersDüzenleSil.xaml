<Window x:Class="OKUL.Akademisyen.DersDüzenleSil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Akademisyen"
        mc:Ignorable="d"
        Title="DersDüzenleSil" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <!-- Menü paneli sabit genişlikte -->
            <ColumnDefinition Width="*" />
            <!-- Ana içerik alanı esnek -->
        </Grid.ColumnDefinitions>

        <!-- Menü Bölümü -->
        <Border Grid.Column="0"
        Background="#2E2E2E"
        BorderBrush="#444"
        BorderThickness="1"
        Padding="9,13,10,10">
            <StackPanel>
                <Button Content="☰ Ana Menü"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15" />

                <Expander Header="Ders Bilgileri" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A" 
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Sınav İşlemleri" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A" 
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Not Girişi" Margin="5" Background="White" Foreground="#3A3A3A"/>
                        <Button Content="Harf Notu Hesaplama" Margin="5" Background="White" Foreground="#3A3A3A"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Ders/Sınav Ekleme" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A" 
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Programa Ders Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Programa Sınav Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>



                <Expander Header="Duyuru İşlemleri" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A"
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Duyuru Görüntüleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Duyuru Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>


        <!-- Ana içerik alanı -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Form başlıkları -->
                <RowDefinition Height="Auto"/>
                <!-- Ders Adı ve ID -->
                <RowDefinition Height="Auto"/>
                <!-- Ders Kodu ve Kredisi -->
                <RowDefinition Height="Auto"/>
                <!-- Ders Dönemi ve Seçmeli -->
                <RowDefinition Height="*"/>
                <!-- Açıklama textbox ve buton -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ders ID -->
            <Label Content="Ders ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="Ders ID burada" Height="30" Margin="5" FontWeight="Bold"/>

            <!-- Ders adı -->
            <Label Content="Ders adı:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="Ders adı burada" Height="30" Margin="5" FontWeight="Bold"/>

            <!-- Ders kodu -->
            <Label Content="Ders kodu:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="Ders kodu burada" Height="30" Margin="5" FontWeight="Bold"/>

            <!-- Ders kredisi -->
            <Label Content="Ders kredisi:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="2" Grid.Column="3" Text="Ders kredisi burada" Height="30" Margin="5" FontWeight="Bold"/>

            <!-- Ders dönemi -->
            <Label Content="Ders dönemi:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="Ders dönemi burada" Height="30" Margin="5" FontWeight="Bold"/>

            <!-- Seçmeli mi? -->
            <Label Content="Seçmeli mi ?" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" FontWeight="Bold" Margin="5"/>
            <ComboBox Grid.Row="3" Grid.Column="3" Height="30" Margin="5" FontWeight="Bold">
                <ComboBoxItem Content="EVET"/>
                <ComboBoxItem Content="HAYIR"/>
            </ComboBox>

            <!-- Ders açıklaması -->
            <Label Content="Ders açıklaması:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="4" Grid.ColumnSpan="4" Text="Ders Açıklamaları" Margin="108,0,10,154" Height="100" FontWeight="Bold" TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Dersi Ekle Butonu -->
            <Button Grid.Column="1" Content="Dersi Sil" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="32" Margin="177,0,0,0" Grid.Row="4" VerticalAlignment="Center" Width="201" Background="Red"/>
            <Button Content="Düzenlemeleri Kaydet" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="32" Margin="77,0,0,0" Grid.Row="4" VerticalAlignment="Center" Width="182" Background="Yellow"/>
        </Grid>
    </Grid>
</Window>
