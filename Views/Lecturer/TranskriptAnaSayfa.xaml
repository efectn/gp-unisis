<Window x:Class="OKUL.Akademisyen.TranskriptAnaSayfa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Akademisyen"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="TranskriptAnaSayfa" Height="550" Width="1198">

    <Grid>
        <!-- Grid yapısı: Sol Menü (0. sütun) | Ana İçerik (1. sütun) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <Border Grid.Column="0" Background="#2E2E2E" BorderBrush="#444" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="9,13,10,10">
                    <TextBlock Text="☰ MENÜ"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,0,0,15" />

                    <!-- Expander: Ders Bilgileri -->
                    <Expander Header="Ders Bilgileri" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down">
                        <StackPanel>
                            <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click"/>
                            <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click_1"/>
                        </StackPanel>
                    </Expander>

                    <!-- Expander: Sınav İşlemleri -->
                    <Expander Header="Sınav İşlemleri" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down">
                        <StackPanel>
                            <Button Content="Not Girişi" Margin="5" Background="White" Foreground="#3A3A3A" Click="Button_Click_4"/>
                            <Button Content="Harf Notu Hesaplama" Margin="5" Background="White" Foreground="#3A3A3A" Click="Button_Click_5"/>
                            <Button Content="Dönem Seçimi" Margin="5" Background="White" Foreground="#3A3A3A"/>
                        </StackPanel>
                    </Expander>

                    <!-- Expander: Ders Ekleme -->
                    <Expander Header="Ders Ekleme" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down">
                        <StackPanel>
                            <Button Content="Programa Ders Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click_2"/>
                            <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click_3"/>
                        </StackPanel>
                    </Expander>

                    <!-- Expander: Ders Bilgileri (Yinelenmiş) -->
                    <Expander Header="Ders Bilgileri" Margin="0,0,0,10" Foreground="White" FontSize="15" Background="#3A3A3A" ExpandDirection="Down">
                        <StackPanel>
                            <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                            <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        </StackPanel>
                    </Expander>

                    <!-- Expander: Akademisyen -->
                    <Expander Header="Akademisyen" Margin="0,0,0,10" Foreground="White" FontSize="15" Background="#3A3A3A" ExpandDirection="Down">
                        <StackPanel>
                            <Button Content="Duyuru" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                            <Button Content="Akademisyen Giriş Ekranı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Sağ İçerik -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto" MinHeight="86.1"/>
            </Grid.RowDefinitions>

            <Label Content="Mevcut Sınav Listesi"
                   HorizontalAlignment="Center"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,5,0,5" Width="178"/>

            <ListView x:Name="listViewSinavlar" Grid.Row="1" AlternationCount="2" Margin="0,0,0,208">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="Background" Value="#E6F0FF"/>
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#BBCCFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn Header="Ders Adı" Width="150" DisplayMemberBinding="{Binding SinavAdi}" />
                        <GridViewColumn Header="Sınav Adı" Width="150" DisplayMemberBinding="{Binding DersAdi}" />
                        <GridViewColumn Header="Hesapla" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Hesapla" Background="Orange" Foreground="White"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Görüntüle" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Görüntüle" Background="Blue" Foreground="White"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Width="185">
                <Button Content="Button" Width="86" Height="37" Click="Button_Click_6" Background="Pink"/>
                <Button Content="Button" Width="84" Height="37" Click="Button_Click_7" Background="DeepPink"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
