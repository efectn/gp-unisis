<Window x:Class="OKUL.Views.Akademisyen.DerseSınavEkleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.Akademisyen"
        mc:Ignorable="d"
        Title="DerseSınavEkleme" Height="450" Width="800" MinWidth="600" MinHeight="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <!-- Menü paneli genişliği sabit -->
            <ColumnDefinition Width="*"/>
            <!-- İçerik bölümü esnek -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Tam yükseklik -->
        </Grid.RowDefinitions>

        <!-- Sol Menü Paneli -->
        <Border Grid.Column="0"
        Background="#2E2E2E"
        BorderBrush="#444"
        BorderThickness="1"
        Padding="9,13,10,10">
            <StackPanel>
                <Button Content="☰ Ana Menü"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15" />

                <Expander Header="Ders Bilgileri" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A" 
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Sınav İşlemleri" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A" 
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Not Girişi" Margin="5" Background="White" Foreground="#3A3A3A"/>
                        <Button Content="Harf Notu Hesaplama" Margin="5" Background="White" Foreground="#3A3A3A"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Ders/Sınav Ekleme" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A" 
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Programa Ders Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" />
                        <Button Content="Programa Sınav Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>



                <Expander Header="Duyuru İşlemleri" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A"
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Duyuru Görüntüleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Duyuru Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>


        <!-- Sağ İçerik Paneli -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <!-- Sınav Eklenecek Ders -->
            <Label Content="Sınav Eklenecek Ders:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" />
            <ComboBox Grid.Row="0" Grid.Column="1" Width="180" VerticalAlignment="Center" />

            <!-- Sınav Adı -->
            <Label Content="Sınav adı:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" />
            <TextBox Grid.Row="1" Grid.Column="1" Height="30" Text="Sınav adı burada" FontWeight="Bold" />

            <!-- Etki Yüzdesi -->
            <Label Content="Etki Yüzdesi:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" />
            <TextBox Grid.Row="2" Grid.Column="1" Height="30" Text="Etki yüzdesi burada" FontWeight="Bold" />

            <!-- Sınav Tarihi -->
            <Label Content="Sınav Tarihi:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" FontWeight="Bold" />
            <DatePicker Grid.Row="1" Grid.Column="2" Width="180" Height="30" VerticalAlignment="Center" />

            <!-- Sınav Süresi -->
            <Label Content="Sınav Süresi:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" />
            <TextBox Grid.Row="3" Grid.Column="1" Height="30" Text="Sınav Süresi burada" FontWeight="Bold" />

            <!-- Sınav Saati -->
            <Label Content="Sınav Saati:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" />
            <TextBox Grid.Row="4" Grid.Column="1" Height="30" Text="Sınav saati burada" FontWeight="Bold" />

            <!-- Boşluk için -->
            <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Height="20" />

            <!-- Sınav Ekle Butonu -->
            <Button Content="Sınav Ekle"
                    Grid.Row="8" Grid.Column="1"
                    Width="130" Height="40"
                    Background="Green"
                    Foreground="White"
                    HorizontalAlignment="Left" />
        </Grid>
    </Grid>
</Window>
