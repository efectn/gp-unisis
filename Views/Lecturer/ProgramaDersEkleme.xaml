<Window x:Class="OKUL.Views.Akademisyen.ProgramaDersEkleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.Akademisyen"
        mc:Ignorable="d"
        Title="ProgramaDersEkleme" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <!-- Menü genişliği -->
            <ColumnDefinition Width="*"/>
            <!-- İçerik alanı -->
        </Grid.ColumnDefinitions>

        <!-- Menü Kısmı -->
        <Border Grid.Column="0"
        Background="#2E2E2E"
        BorderBrush="#444"
        BorderThickness="1"
        Padding="9,13,10,10">
            <StackPanel>
                <Button Content="☰ Ana Menü"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15" />

                <Expander Header="Ders Bilgileri" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A" 
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Sınav İşlemleri" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A" 
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Not Girişi" Margin="5" Background="White" Foreground="#3A3A3A"/>
                        <Button Content="Harf Notu Hesaplama" Margin="5" Background="White" Foreground="#3A3A3A"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Ders/Sınav Ekleme" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A" 
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Programa Ders Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Programa Sınav Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>



                <Expander Header="Duyuru İşlemleri" 
                  Margin="0,0,0,10"
                  Foreground="White" 
                  Background="#3A3A3A"
                  FontSize="15"
                  ExpandDirection="Down"
                  Width="204">
                    <StackPanel>
                        <Button Content="Duyuru Görüntüleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Duyuru Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>


        <!-- İçerik Kısmı -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Ders Adı -->
                <RowDefinition Height="Auto"/>
                <!-- Ders Kodu -->
                <RowDefinition Height="Auto"/>
                <!-- Ders Kredisi -->
                <RowDefinition Height="Auto"/>
                <!-- Ders Dönemi -->
                <RowDefinition Height="Auto"/>
                <!-- Seçmeli mi? -->
                <RowDefinition Height="*"/>
                <!-- Ders Açıklaması -->
                <RowDefinition Height="Auto"/>
                <!-- Buton -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ders Adı -->
            <Label Grid.Row="0" Grid.Column="0" Content="Ders adı:" VerticalAlignment="Center" FontWeight="Bold" />
            <TextBox Grid.Row="0" Grid.Column="1" Height="35" Text="Ders adını burada" FontWeight="Bold" />

            <!-- Seçmeli mi? -->
            <Label Grid.Row="0" Grid.Column="3" Content="Seçmeli mi ?" VerticalAlignment="Center" FontWeight="Bold" />
            <ComboBox Grid.Row="0" Grid.Column="4" Height="35" FontWeight="Bold">
                <ComboBoxItem Content="EVET"/>
                <ComboBoxItem Content="HAYIR"/>
            </ComboBox>

            <!-- Ders Kodu -->
            <Label Grid.Row="1" Grid.Column="0" Content="Ders kodu:" VerticalAlignment="Center" FontWeight="Bold" />
            <TextBox Grid.Row="1" Grid.Column="1" Height="35" Text="Ders kodu burada" FontWeight="Bold" />

            <!-- Ders Kredisi -->
            <Label Grid.Row="2" Grid.Column="0" Content="Ders kredisi:" VerticalAlignment="Center" FontWeight="Bold" />
            <TextBox Grid.Row="2" Grid.Column="1" Height="35" Text="Ders kredisi burada" FontWeight="Bold" />

            <!-- Ders Dönemi -->
            <Label Grid.Row="3" Grid.Column="0" Content="Ders dönemi:" VerticalAlignment="Center" FontWeight="Bold" />
            <TextBox Grid.Row="3" Grid.Column="1" Height="35" Text="Ders dönemi" FontWeight="Bold" />

            <!-- Ders Açıklaması -->
            <Label Grid.Row="4" Grid.Column="0" Content="Ders açıklaması:" VerticalAlignment="Top" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" Text="Ders Açıklamaları" FontWeight="Bold" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,79" />

            <!-- Dersi Ekle Butonu -->
            <Button Grid.Row="6" Grid.Column="1" Width="130" Height="40" Background="Green" Foreground="White" Content="Dersi Ekle" HorizontalAlignment="Left" Margin="86,10,0,10" Grid.ColumnSpan="3"/>
        </Grid>
    </Grid>
</Window>
