<Window x:Class="OKUL.Views.Akademisyen.NotGirişi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.Akademisyen"
        mc:Ignorable="d"
        Title="NotGirişi" Height="550" Width="800">
    <Grid>
        <!-- Sütun tanımlamaları -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <!-- Menü -->
            <ColumnDefinition Width="*"/>
            <!-- İçerik -->
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <Border Grid.Column="0" Background="#2E2E2E" BorderBrush="#444" BorderThickness="1">
            <ScrollViewer>
                <StackPanel Margin="9,13,10,10">
                    <TextBlock Text="☰ MENÜ" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <Expander Header="Ders Bilgileri" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15">
                        <StackPanel>
                            <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                            <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Sınav İşlemleri" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15">
                        <StackPanel>
                            <Button Content="Not Girişi" Margin="5" Background="White" Foreground="#3A3A3A"/>
                            <Button Content="Harf Notu Hesaplama" Margin="5" Background="White" Foreground="#3A3A3A"/>
                            <Button Content="Dönem Seçimi" Margin="5" Background="White" Foreground="#3A3A3A"/>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Ders Ekleme" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15">
                        <StackPanel>
                            <Button Content="Programa Ders Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                            <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Ders Bilgileri" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15">
                        <StackPanel>
                            <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                            <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Akademisyen" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15">
                        <StackPanel>
                            <Button Content="Duyuru" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                            <Button Content="Akademisyen Giriş Ekranı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- İçerik Alanı -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Başlık -->
                <RowDefinition Height="*"/>
                <!-- Liste -->
                <RowDefinition Height="Auto"/>
                <!-- Buton -->
            </Grid.RowDefinitions>

            <Label Content="Dersin Adı" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <ListView Grid.Row="1" Margin="0,10,0,46">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="#" Width="30">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text=""/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Öğrenci No" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text=""/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Ad Soyad" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text=""/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Not" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Width="60"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Grid.Row="2" Content="Girilen Notları Onayla" Height="58" Width="203" Background="Green" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
