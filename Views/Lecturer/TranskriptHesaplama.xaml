<Window x:Class="OKUL.Views.Akademisyen.TranskriptHesaplama"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.Akademisyen"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="TranskriptHesaplama" Height="450" Width="1040">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <Border Grid.Column="0" Background="#2E2E2E" BorderBrush="#444" BorderThickness="1" Padding="9,13,10,10">
            <StackPanel>
                <Button Content="☰ Ana Menü" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                <Expander Header="Ders Bilgileri" Foreground="White" Background="#3A3A3A" FontSize="15" Width="200" Margin="0,0,0,10">
                    <StackPanel>
                        <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Sınav İşlemleri" Foreground="White" Background="#3A3A3A" FontSize="15" Width="200" Margin="0,0,0,10">
                    <StackPanel>
                        <Button Content="Not Girişi" Margin="5" Background="White" Foreground="#3A3A3A" />
                        <Button Content="Harf Notu Hesaplama" Margin="5" Background="White" Foreground="#3A3A3A"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Ders/Sınav Ekleme" Foreground="White" Background="#3A3A3A" FontSize="15" Width="200" Margin="0,0,0,10">
                    <StackPanel>
                        <Button Content="Programa Ders Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Programa Sınav Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Duyuru İşlemleri" Foreground="White" Background="#3A3A3A" FontSize="15" Width="200" Margin="0,0,0,10">
                    <StackPanel>
                        <Button Content="Duyuru Görüntüleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Duyuru Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>

        <!-- İçerik Paneli -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="Mevcut Notu Hesaplanacak Ders" 
                   FontWeight="Bold" FontSize="14" Margin="266,0,266,10"/>

            <ListView Grid.Row="1" x:Name="listViewSinavlar" AlternationCount="2">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                <Setter Property="Background" Value="#E6F0FF"/>
                            </Trigger>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#BBCCFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Öğrenci No" Width="150" DisplayMemberBinding="{Binding OgrenciNo}"/>
                        <GridViewColumn Header="Öğrenci Adı" Width="150" DisplayMemberBinding="{Binding OgrenciAdi}"/>
                        <GridViewColumn Header="Vize Notu" Width="150" DisplayMemberBinding="{Binding VizeNotu}"/>
                        <GridViewColumn Header="Final Notu" Width="150" DisplayMemberBinding="{Binding FinalNotu}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Grid.Row="2" Content="Hesapla" Width="179" Height="44" Background="Green" HorizontalAlignment="Left" Margin="270,10,0,0"/>
        </Grid>
    </Grid>
</Window>
