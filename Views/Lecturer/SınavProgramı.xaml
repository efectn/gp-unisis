<Window x:Class="OKUL.Views.Akademisyen.SınavProgramı"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.Akademisyen"
        xmlns:viewModels="clr-namespace:OKUL.ViewModels"
        mc:Ignorable="d"
        Title="SınavProgramı" Height="564" Width="1150">
    <Window.DataContext>
        <viewModels:SinavProgramiViewModel/>
    </Window.DataContext>

    <Grid Margin="0,0,-118,0">
        <!-- Grid Kolonları -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <Border Grid.Column="0" Width="223" Height="570"
                Background="#2E2E2E"
                BorderBrush="#444"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <Border Background="#2E2E2E" BorderBrush="#444" BorderThickness="1" Padding="10" Margin="-5,-1,-4,-1" >
                <StackPanel>
                    <TextBlock Text="☰ MENÜ"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="0,0,0,15" />

                    <Expander Header="Ders Bilgileri" 
                        Margin="0,0,0,10"
                        Foreground="White" 
                        Background="#3A3A3A" 
                        FontSize="15"
                        ExpandDirection="Down" Width="204">
                        <StackPanel>
                            <Button Content="Ders Programı" Margin="5"  Background="White" Foreground="#3A3A3A" FontSize="15"/>
                            <Button Content="Sınav Programı" Margin="5"  Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Sınav İşlemleri"
                        Margin="0,0,0,10"
                        Foreground="White" 
                        Background="#3A3A3A" 
                        FontSize="15"
                        ExpandDirection="Down" Width="204">
                        <StackPanel>
                            <Button Content="Not Girişi" Margin="5" Background="White" Foreground="#3A3A3A"/>
                            <Button Content="Harf Notu Hesaplama" Margin="5" Background="White" Foreground="#3A3A3A"/>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Ders Ekleme" 
                        Margin="0,0,0,10"
                        Foreground="White" 
                        Background="#3A3A3A" 
                        FontSize="15"
                        ExpandDirection="Down" Width="204">
                        <StackPanel>
                            <Button Content="Programa Ders Ekleme" Margin="5"  Background="White" Foreground="#3A3A3A" FontSize="15"/>
                            <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" />
                        </StackPanel>
                    </Expander>

                    <Expander Header="Ders Bilgileri" 
                        Margin="0,0,0,10"
                        Foreground="White" 
                        FontSize="15"
                        Background="#3A3A3A"
                        ExpandDirection="Down" Width="204">
                        <StackPanel>
                            <Button Content="Ders Programı" Margin="5"  Background="White" Foreground="#3A3A3A" FontSize="15"/>
                            <Button Content="Sınav Programı" Margin="5"  Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Akademisyen" 
                        Margin="0,0,0,10"
                        Foreground="White" 
                        FontSize="15"
                        Background="#3A3A3A"
                        ExpandDirection="Down" Width="204">
                        <StackPanel>
                            <Button Content="Duyuru" Margin="5"  Background="White" Foreground="#3A3A3A" FontSize="15"/>
                            <Button Content="Akademisyen Giriş Ekranı" Margin="5"  Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>
        </Border>

        <!-- Sağdaki Liste ve Dinamik İçerik -->
        <!-- Sınav Programı Listesi -->
        <ListView Margin="226,11,122,122" AlternationCount="2"
                      ItemsSource="{Binding SinavProgramiListesi}"
                      Grid.Row="0" Grid.ColumnSpan="2">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="LightGray"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                            <Setter Property="Background" Value="#E6F0FF"/>
                        </Trigger>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Red"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#BBCCFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" />
                    <GridViewColumn Header="Sınav Tipi" DisplayMemberBinding="{Binding SinavTipi}" />
                    <GridViewColumn Header="Sınav Adı" DisplayMemberBinding="{Binding SinavAdi}" />
                    <GridViewColumn Header="Sınav Süresi" DisplayMemberBinding="{Binding SinavSuresi}" />
                    <GridViewColumn Header="Sınav Tarihi" DisplayMemberBinding="{Binding SinavTarihi}" />
                    <GridViewColumn Header="Sınav Saati" DisplayMemberBinding="{Binding SinavSaati}" />

                    <GridViewColumn Header="Düzenle">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Düzenle" Background="Blue" Foreground="White"
                                            Command="{Binding DataContext.DuzenleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Sil" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Sil" Background="Red" Foreground="White"
                                            Command="{Binding DataContext.SilCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Ekle Butonu -->
        <Button Content="Programa Yeni Sınav Ekle"
                    HorizontalAlignment="Left"
                    Width="216"
                    Margin="323,446,0,70"
                    Background="Green" Grid.Column="1"/>



    </Grid>
</Window>
