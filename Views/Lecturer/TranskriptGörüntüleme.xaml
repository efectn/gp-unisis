<Window x:Class="OKUL.Akademisyen.TranskriptGörüntüleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Akademisyen"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="TranskriptGörüntüleme" Height="546" Width="1050">
    <Grid>
        <!-- Grid yapısı: 1 sütun menü için, 1 sütun içerik için -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <!-- Menü sabit genişlik -->
            <ColumnDefinition Width="*"/>
            <!-- İçerik -->
        </Grid.ColumnDefinitions>

        <!-- Menü (Sol Panel) -->
        <Border Background="#2E2E2E"
                BorderBrush="#444"
                BorderThickness="1"
                Padding="9,13,10,10"
                Grid.Column="0">
            <StackPanel>
                <Button Content="☰ Ana Menü"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="0,0,0,15"/>

                <!-- Ders Bilgileri -->
                <Expander Header="Ders Bilgileri" Margin="0,0,0,10"
                          Foreground="White" Background="#3A3A3A"
                          FontSize="15" Width="204">
                    <StackPanel>
                        <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click"/>
                        <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click_1"/>
                    </StackPanel>
                </Expander>

                <!-- Sınav İşlemleri -->
                <Expander Header="Sınav İşlemleri" Margin="0,0,0,10"
                          Foreground="White" Background="#3A3A3A"
                          FontSize="15" Width="204">
                    <StackPanel>
                        <Button Content="Not Girişi" Margin="5" Background="White" Foreground="#3A3A3A" Click="Button_Click_4"/>
                        <Button Content="Harf Notu Hesaplama" Margin="5" Background="White" Foreground="#3A3A3A" Click="Button_Click_5"/>
                    </StackPanel>
                </Expander>

                <!-- Ders/Sınav Ekleme -->
                <Expander Header="Ders/Sınav Ekleme" Margin="0,0,0,10"
                          Foreground="White" Background="#3A3A3A"
                          FontSize="15" Width="204">
                    <StackPanel>
                        <Button Content="Programa Ders Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click_2"/>
                        <Button Content="Programa Sınav Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15" Click="Button_Click_3"/>
                    </StackPanel>
                </Expander>

                <!-- Duyurular -->
                <Expander Header="Duyuru İşlemleri" Margin="0,0,0,10"
                          Foreground="White" Background="#3A3A3A"
                          FontSize="15" Width="204">
                    <StackPanel>
                        <Button Content="Duyuru Görüntüleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Duyuru Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>

        <!-- Liste Görüntüleme (Sağ Panel) -->
        <ListView x:Name="listViewSinavlar"
                  Margin="220,10,-10,10"
                  AlternationCount="2" Grid.ColumnSpan="2">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="LightGray"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                            <Setter Property="Background" Value="#E6F0FF"/>
                        </Trigger>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Red"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#BBCCFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Sınav Adı" Width="150" DisplayMemberBinding="{Binding SinavAdi}" />
                    <GridViewColumn Header="Öğrenci Numarası" Width="170" DisplayMemberBinding="{Binding OgrenciNo}" />
                    <GridViewColumn Header="Öğrenci Adı" Width="150" DisplayMemberBinding="{Binding OgrenciAdi}" />
                    <GridViewColumn Header="Harf Notu" Width="150" DisplayMemberBinding="{Binding HarfNotu}" />
                    <GridViewColumn Header="Not Hesapla" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Notu Hesapla" Background="Blue" Foreground="White"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
