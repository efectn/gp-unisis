<Window x:Class="OKUL.Views.Ogrenciİsleri.DersSecimiGoruntule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.Ogrenciİsleri"
        mc:Ignorable="d"
        Title="DersSecimiListele" Height="450" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menü -->
        <Border Background="#2E2E2E" BorderBrush="#444" BorderThickness="1">
            <StackPanel Margin="9,13,10,10">
                <Button Content="☰ Ana Menü" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" />
                <Expander Header="Öğrenci İşlemleri" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Öğrenci Listele" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Öğrenci Ekle" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>
                <Expander Header="Ders Seçimi" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Ders Seçimlerini Listele" Margin="5" Background="White" Foreground="#3A3A3A"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>

        <!-- İçerik -->
        <Grid Grid.Column="1" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Başlık -->
                <RowDefinition Height="Auto"/>
                <!-- Bilgi Grid -->
                <RowDefinition Height="*"/>
                <!-- ListView -->
                <RowDefinition Height="Auto"/>
                <!-- Buton -->
            </Grid.RowDefinitions>

            <Label Content="Ders Seçimlerini Listele" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0"/>

            <!-- Bilgi alanları için Grid -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 1. Satır -->
                <Label Content="Öğrenci Ad Soyadı:" FontWeight="Bold" FontSize="16" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,10"/>
                <Label Content="Test" FontSize="16" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,10"/>

                <Label Content="Alınan Kredi:" FontWeight="Bold" FontSize="16" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,5,10"/>
                <Label Content="Test" FontSize="16" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,0,10"/>

                <!-- 2. Satır -->
                <Label Content="Öğrenci Numarası:" FontWeight="Bold" FontSize="16" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,10"/>
                <Label Content="Test" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,10"/>

                <Label Content="Bölüm:" FontWeight="Bold" FontSize="16" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,5,10"/>
                <Label Content="Test" FontSize="16" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,0,10"/>
            </Grid>

            <!-- ListView -->
            <ListView ItemsSource="{Binding Ogrenciler}" Grid.Row="2" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="#" DisplayMemberBinding="{Binding Id}" Width="30"/>
                        <GridViewColumn Header="Ders" DisplayMemberBinding="{Binding OgrenciNo}" Width="150"/>
                        <GridViewColumn Header="Akademisyen" DisplayMemberBinding="{Binding OgrenciNo}" Width="200"/>
                        <GridViewColumn Header="Kredi" DisplayMemberBinding="{Binding AdSoyad}" Width="150"/>
                        <GridViewColumn Header="Dönem" DisplayMemberBinding="{Binding Bolum}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Buton -->
            <Button Content="Onayla" Background="Green" Grid.Row="3" Height="40" Width="150" HorizontalAlignment="Left" FontSize="18"/>
        </Grid>

    </Grid>
</Window>
