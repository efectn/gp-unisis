<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:OKUL.Views.Ogrenciİsleri"
    xmlns:materialDesignMahApps="http://materialdesigninxaml.net/winfx/xaml/themes"
    x:Class="OKUL.Views.Ogrenciİsleri.OgrenciEkle"
    mc:Ignorable="d"
    Title="DersSecimiListele" Height="650" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menü bölümü -->
        <Border Background="#2E2E2E" BorderBrush="#444" BorderThickness="1" >
            <StackPanel Margin="9,13,10,10">
                <Button Content="☰ Ana Menü" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" />
                <Expander Header="Öğrenci İşlemleri" Margin="0,0,0,20" Foreground="White" Background="#3A3A3A" FontSize="18" ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Öğrenci Listele" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="18"/>
                        <Button Content="Öğrenci Ekle" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="18"/>
                    </StackPanel>
                </Expander>
                <Expander Header="Ders Seçimi" Margin="0,0,0,20" Foreground="White" Background="#3A3A3A" FontSize="18" ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Ders Seçimlerini Listele" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="18"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>

        <!-- Form Başlığı -->
        <Label Content="Öğrenci Ekle" FontSize="24" FontWeight="Bold" Margin="0,10,0,30" Grid.Column="1" HorizontalAlignment="Center" Width="160"/>

        <!-- Form Grid -->
        <Grid Grid.Column="1" Margin="40,80,40,100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 1. Satır -->
            <Label Content="İsim" FontWeight="Bold" FontSize="18" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,15,30"/>
            <TextBox x:Name="UpdateFirstName" materialDesignMahApps:HintAssist.Hint="İsim" FontSize="16" Grid.Row="0" Grid.Column="1" Margin="0,0,25,30" Height="40"/>
            <Label Content="Soyisim" FontWeight="Bold" FontSize="18" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,15,30"/>
            <TextBox x:Name="UpdateFirstName_Kopyala" materialDesignMahApps:HintAssist.Hint="Soyisim" FontSize="16" Grid.Row="0" Grid.Column="3" Margin="0,0,0,30" Height="40"/>

            <!-- 2. Satır -->
            <Label Content="Öğrenci No" FontWeight="Bold" FontSize="18" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,15,30"/>
            <TextBox x:Name="UpdateFirstName_Kopyala1" materialDesignMahApps:HintAssist.Hint="Numara" FontSize="16" Grid.Row="1" Grid.Column="1" Margin="0,0,25,30" Height="40"/>
            <Label Content="Şifre" FontWeight="Bold" FontSize="18" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,15,30"/>
            <TextBox x:Name="UpdateFirstName_Kopyala2" materialDesignMahApps:HintAssist.Hint="Şifre" FontSize="16" Grid.Row="1" Grid.Column="3" Margin="0,0,0,30" Height="40"/>

            <!-- 3. Satır -->
            <Label Content="Email" FontWeight="Bold" FontSize="18" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,15,30"/>
            <TextBox x:Name="UpdateFirstName_Kopyala3" materialDesignMahApps:HintAssist.Hint="Email" FontSize="16" Grid.Row="2" Grid.Column="1" Margin="0,0,25,30" Height="40"/>
            <Label Content="TC Kimlik" FontWeight="Bold" FontSize="18" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,15,30"/>
            <TextBox x:Name="UpdateFirstName_Kopyala4" materialDesignMahApps:HintAssist.Hint="TC Kimlik No" FontSize="16" Grid.Row="2" Grid.Column="3" Margin="0,0,0,30" Height="40"/>

            <!-- 4. Satır -->
            <Label Content="Doğum Tarihi" FontWeight="Bold" FontSize="18" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,15,30"/>
            <DatePicker Grid.Row="3" Grid.Column="1" Margin="0,0,25,30" Width="160" Height="40"/>
            <Label Content="Bölüm" FontWeight="Bold" FontSize="18" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,15,30"/>
            <ComboBox Grid.Row="3" Grid.Column="3" Margin="0,0,0,30" Width="160" Height="40"/>

            <!-- Buton -->
            <Button Content="Öğrenci Ekle" Background="Green" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,40,0,0" Height="50" Width="180" FontSize="20" />
        </Grid>

    </Grid>
</Window>
