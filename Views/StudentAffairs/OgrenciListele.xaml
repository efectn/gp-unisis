<Window x:Class="OKUL.Views.Ogrenciİsleri.OgrenciListele"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.Ogrenciİsleri"
        mc:Ignorable="d"
        Title="DersSecimiListele" Height="450" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border
            Background="#2E2E2E"
            BorderBrush="#444"
            BorderThickness="1" Margin="-1,-1,0,0">

            <StackPanel Margin="9,13,10,10">
                <TextBlock Text="☰ MENÜ"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0,0,0,15" />

                <Button Content="Anasayfa"
        Margin="0,0,0,10"
        Foreground="White"
        Background="#3A3A3A"
        FontSize="15"
        Width="204"
        Height="50"
        Padding="25,5"
        HorizontalContentAlignment="Left"
        VerticalContentAlignment="Center"/>


                <Expander Header="Öğrenci İşlemleri" 
                    Margin="0,0,0,10"
                    Foreground="White" 
                    Background="#3A3A3A" 
                    FontSize="15"
                    ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Öğrenci Listele" Margin="5"  Background="White " Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Öğrenci Ekle" Margin="5"  Background="White " Foreground="#3A3A3A" FontSize="15"/>

                    </StackPanel>
                </Expander>

                <Expander Header="Ders Seçimi" 
                    Margin="0,0,0,10"
                    Foreground="White" 
                    Background="#3A3A3A" 
                    FontSize="15"
                    ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Ders Seçimlerini Listele" Margin="5" Background="White " Foreground="#3A3A3A"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>
        <ListView Margin="250,42,10,92" Grid.ColumnSpan="2" ItemsSource="{Binding Ogrenciler}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="#" DisplayMemberBinding="{Binding Id}" Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Öğrenci No" DisplayMemberBinding="{Binding OgrenciNo}" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Ad Soyad" DisplayMemberBinding="{Binding AdSoyad}" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text=""/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Bölüm" DisplayMemberBinding="{Binding Bolum}" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Width="60"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Düzenle" Width="130">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Düzenle" Background="Blue" Foreground="White"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Sil" Width="130">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Sil" Background="Red" Foreground="White"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Öğrenciler" FontSize="18" FontWeight="Bold" Margin="250,5,302,392" Grid.Column="1"/>

    </Grid>
</Window>
