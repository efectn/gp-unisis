<Window x:Class="OKUL.Views.Ogrenciİsleri.Anasayfa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.Ogrenciİsleri"
        mc:Ignorable="d"
        Title="Anasayfa" Height="450" Width="800">
 
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border
                Background="#2E2E2E"
                BorderBrush="#444"
                BorderThickness="1" Margin="-1,-1,0,0">

                <StackPanel Margin="9,13,10,10">
                    <Button Content="☰ Ana Mewnü"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,10,0,15" />

                    <Button Content="Anasayfa"
                            Margin="0,0,0,10"
                            Foreground="White"
                            Background="#3A3A3A"
                            FontSize="15"
                            Width="204"
                            Height="50"
                            Padding="25,5"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"/>


                    <Expander Header="Öğrenci İşlemleri" 
                              Margin="0,0,0,10"
                              Foreground="White" 
                              Background="#3A3A3A" 
                              FontSize="15"
                              ExpandDirection="Down" Width="204">
                        <StackPanel>
                            <Button Content="Öğrenci Listele" Margin="5"  Background="White " Foreground="#3A3A3A" FontSize="15"/>
                            <Button Content="Öğrenci Ekle" Margin="5"  Background="White " Foreground="#3A3A3A" FontSize="15"/>

                        </StackPanel>
                    </Expander>

                    <Expander Header="Ders Seçimi" 
                              Margin="0,0,0,10"
                              Foreground="White" 
                              Background="#3A3A3A" 
                              FontSize="15"
                              ExpandDirection="Down" Width="204">
                        <StackPanel>
                            <Button Content="Ders Seçimlerini Listele" Margin="5" Background="White " Foreground="#3A3A3A"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>
        </Grid>
</Window>
