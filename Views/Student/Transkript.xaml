<Window x:Class="OKUL.Views.OgrenciSayfalari.Transkript"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transkript" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menü -->
        <Border Background="#2E2E2E" BorderBrush="#444" BorderThickness="1">
            <StackPanel Margin="9,13,10,10">
                <Button Content="☰ Ana Menü" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,10,0,15"/>
            </StackPanel>
        </Border>

        <!-- İçerik -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Dönem ComboBox -->
                <RowDefinition Height="Auto"/>
                <!-- Başlık -->
                <RowDefinition Height="*"/>
                <!-- ListView -->
                <RowDefinition Height="Auto"/>
                <!-- Alt Bilgiler -->
            </Grid.RowDefinitions>

            <!-- Dönem Seçimi -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0">
                <TextBlock Text="Dönem Seçin:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="donemComboBox" Width="200" Height="30"/>
            </StackPanel>

            <!-- Başlık -->
            <Label Content="Transkript" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="1"/>

            <!-- Ders Listesi -->
            <ListView x:Name="transkriptListView" Grid.Row="2" Margin="0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Ders Adı" DisplayMemberBinding="{Binding DersAdi}" Width="150"/>
                        <GridViewColumn Header="Kredi" DisplayMemberBinding="{Binding Kredi}" Width="150"/>
                        <GridViewColumn Header="Akademisyen" DisplayMemberBinding="{Binding Akademisyen}" Width="150"/>
                        <GridViewColumn Header="Ham Not" DisplayMemberBinding="{Binding HamNot}" Width="150"/>
                        <GridViewColumn Header="T Skor" DisplayMemberBinding="{Binding TSkor}" Width="150"/>
                        <GridViewColumn Header="Harf Notu" DisplayMemberBinding="{Binding HarfNotu}" Width="150"/>
                        <GridViewColumn Header="Analiz" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Analiz" Click="Analiz_Click" Background="Blue" Foreground="White"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Alt Bilgiler -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <TextBlock x:Name="anoTextBlock" Text="Dönem ANO: 0.00" FontSize="16" Margin="10,0"/>
                <TextBlock x:Name="ganoTextBlock" Text="Genel GANO: 0.00" FontSize="16" Margin="10,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
