<Window x:Class="OKUL.Views.OgrenciSayfalari.Notlarim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.OgrenciSayfalari"
        mc:Ignorable="d"
        Title="DersSecimiListele" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menü -->
        <Border Background="#2E2E2E" BorderBrush="#444" BorderThickness="1">
            <StackPanel Margin="9,13,10,10">
                <Button Content="☰ Ana Menü" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,10,0,15"/>
                <Expander Header="Öğrenci İşlemleri" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Öğrenci Listele" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Öğrenci Ekle" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>
                <Expander Header="Ders Seçimi" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Ders Seçimlerini Listele" Margin="5" Background="White" Foreground="#3A3A3A"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>

        <!-- İçerik -->
        <Grid Grid.Column="1" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <!-- Bilgi -->
                <RowDefinition Height="*"/>
                <!-- Buton -->
            </Grid.RowDefinitions>

            <!-- Başlık -->
            <Label Content="Sınav Sonuçları" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0"/>

            <!-- Bilgi alanı -->

            <!-- Ders Listesi -->
            <ListView x:Name="dersListView" Margin="0,34,0,-24">

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Ders" DisplayMemberBinding="{Binding DersAdi}" Width="200"/>
                        <GridViewColumn Header="Sınav" DisplayMemberBinding="{Binding DersAdi}" Width="200"/>
                        <GridViewColumn Header="Ağırlık" DisplayMemberBinding="{Binding DersAdi}" Width="200"/>
                        <GridViewColumn Header="Sınav Sonucu" DisplayMemberBinding="{Binding Akademisyen}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Onay Butonu -->
        </Grid>
    </Grid>
</Window>
