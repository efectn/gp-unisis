<Window x:Class="OKUL.Views.OgrenciSayfalari.TranskriptAnaliz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transkript" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- İçerik -->
        </Grid.ColumnDefinitions>

        <!-- Menü -->
        <Border Background="#2E2E2E" BorderBrush="#444" BorderThickness="1">
            <StackPanel Margin="9,13,10,10">
                <Button Content="☰ Ana Menü" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,10,0,15"/>
            </StackPanel>
        </Border>

        <!-- İçerik -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Başlık -->
            <TextBlock Text="Not Analizi" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />

            <!-- Harf Notu Dağılımı -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Not türü -->
                <TextBlock x:Name="notTuruTextBlock" FontSize="16" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

                <!-- Harf Notu ListView -->
                <ListView x:Name="harfNotuListView" Grid.Row="1" Margin="0,0,0,10">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Harf Notu" DisplayMemberBinding="{Binding Harf}" Width="150"/>
                            <GridViewColumn Header="Aralık" DisplayMemberBinding="{Binding Aralik}" Width="150"/>
                            <GridViewColumn Header="Kişi Sayısı" DisplayMemberBinding="{Binding KisiSayisi}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Ortalama ve Sapma -->
                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
                    <TextBlock x:Name="ortalamaTextBlock" FontSize="14" />
                    <TextBlock x:Name="stdSapmaTextBlock" FontSize="14" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
