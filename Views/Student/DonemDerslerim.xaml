<Window x:Class="OKUL.Views.OgrenciSayfalari.DonemDerslerim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.OgrenciSayfalari"
        mc:Ignorable="d"
        Title="DersSecimiListele" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menü -->
        <Border Background="#2E2E2E" BorderBrush="#444" BorderThickness="1">
            <StackPanel Margin="9,13,10,10">
                <Button Content="☰ Ana Menü" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,10,0,15"/>
                <Expander Header="Öğrenci İşlemleri" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Öğrenci Listele" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Öğrenci Ekle" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>
                <Expander Header="Ders Seçimi" Margin="0,0,0,10" Foreground="White" Background="#3A3A3A" FontSize="15" ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Ders Seçimlerini Listele" Margin="5" Background="White" Foreground="#3A3A3A"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>

        <!-- İçerik -->
        <Grid Grid.Column="1" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Başlık -->
                <RowDefinition Height="Auto"/>
                <!-- Bilgi -->
                <RowDefinition Height="*"/>
                <!-- Liste -->
                <RowDefinition Height="Auto"/>
                <!-- Buton -->
            </Grid.RowDefinitions>

            <!-- Başlık -->
            <Label Content="Dönem Derslerim" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0"/>

            <!-- Bilgi alanı -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Label Content="Aktif Dönem:" FontWeight="Bold" FontSize="16" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,10"/>
                <Label Content="2024/2025 - Bahar" FontSize="16" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,10"/>

                <Label Content="Alınan Kredi:" FontWeight="Bold" FontSize="16" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,5,10"/>
                <Label Content="20 / 40" FontSize="16" Grid.Column="3" VerticalAlignment="Center" Margin="0,0,0,10"/>
            </Grid>

            <!-- Ders Listesi -->
            <ListView x:Name="dersListView" Grid.Row="2" Margin="0,0,0,10">
                
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Ders" DisplayMemberBinding="{Binding DersAdi}" Width="200"/>
                        <GridViewColumn Header="Akademisyen" DisplayMemberBinding="{Binding Akademisyen}" Width="200"/>
                        <GridViewColumn Header="Kredi" DisplayMemberBinding="{Binding Kredi}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Onay Butonu -->
        </Grid>
    </Grid>
</Window>
