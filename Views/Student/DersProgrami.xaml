<Window x:Class="OKUL.Views.OgrenciSayfalari.DersProgrami"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OKUL.Views.OgrenciSayfalari"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="DersProgramı" Height="450" Width="955">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sol Menü -->
        <Border Background="#2E2E2E" BorderBrush="#444" BorderThickness="1" Margin="0">
            <StackPanel Margin="9,13,10,10">
                <Button Content="☰ Ana Menü"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,10,0,15" />

                <Expander Header="Ders Bilgileri"
                          Margin="0,0,0,10"
                          Foreground="White"
                          Background="#3A3A3A"
                          FontSize="15"
                          ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Ders Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Sınav İşlemleri"
                          Margin="0,0,0,10"
                          Foreground="White"
                          Background="#3A3A3A"
                          FontSize="15"
                          ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Not Girişi" Margin="5" Background="White" Foreground="#3A3A3A"/>
                        <Button Content="Harf Notu Hesaplama" Margin="5" Background="White" Foreground="#3A3A3A"/>
                        <Button Content="Dönem Seçimi" Margin="5" Background="White" Foreground="#3A3A3A"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Ders Ekleme"
                          Margin="0,0,0,10"
                          Foreground="White"
                          Background="#3A3A3A"
                          FontSize="15"
                          ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Programa Ders Ekleme" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Sınav Programı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Akademisyen"
                          Margin="0,0,0,10"
                          Foreground="White"
                          FontSize="15"
                          Background="#3A3A3A"
                          ExpandDirection="Down" Width="204">
                    <StackPanel>
                        <Button Content="Duyuru" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                        <Button Content="Akademisyen Giriş Ekranı" Margin="5" Background="White" Foreground="#3A3A3A" FontSize="15"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Column="1" Margin="10,10,10,129" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Ders Programı" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Ders Programı Izgara -->
                <Grid x:Name="ScheduleGrid" Margin="0,0,0,20" ShowGridLines="True" />

                <!-- Buton -->
                <Button Content="Programa Ders Ekle"
                        Background="Green"
                        Foreground="White"
                        FontWeight="Bold" Grid.Column="1" Margin="258,371,257,23"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
